{{>head}}

	{{>navigation}}

	<header id="header">
		<div class="container mt-5">
			<div class="row">
				<div class="col-md-6">
					<div class="header-content-left">
						<img src="img/icon.jpg" style="width: 60%">
					</div>
				</div>
				<div class="col-md-6">
					<div class="section">
						<div class="container">
							<div class="row justify-content-center">
								<div class="header-content-right">
									<form action="/validation" method="POST" class="card my-2" enctype="multipart/form-data">
										<div class="card-body">
											<div class="form-group">
												<div class="input-group mb-2">
													<div class="input-group-prepend">
														<i class="fas fa-id-badge input-group-text"></i>
													</div>
													<input type="number" placeholder="Identificación" class="form-control" name="id" required>
												</div>
											</div>
											<div class="form-group">
												<div class="input-group mb-2">
													<div class="input-group-prepend">
														<i class="fas fa-signature input-group-text"></i>
													</div>
													<input type="text" placeholder="Nombre" class="form-control" name="name" required>
												</div>
											</div>
											<div class="form-group">
												<div class="input-group mb-2">
													<div class="input-group-prepend">
														<i class="fas fa-at input-group-text"></i>
													</div>
													<input type="email" placeholder="Email" class="form-control" name="email" required>
												</div>
											</div>
											<div class="form-group">
												<div class="input-group mb-2">
													<div class="input-group-prepend">
														<i class="fas fa-mobile input-group-text"></i>
													</div>
													<input type="nummber" placeholder="Teléfono" class="form-control" name="tel" required>
												</div>
											</div>
											<div class="form-group">
												<div class="input-group mb-2">
													<div class="input-group-prepend">
														<i class="fas fa-key input-group-text"></i>
													</div>
													<input type="password" placeholder="Contraseña" class="form-control" name="password" required>
												</div>
											</div>
											<div class="form-group">
												<div class="input-group mb-2">
  													<div class="input-group-prepend">
												    	<i class="fas fa-images input-group-text" id="fa-fotoP"></i>
												 	</div>
													<div class="custom-file">
														<input type="file" class="custom-file-input" name="foto" id="fotoP" aria-describedby="fa-fotoP" accept="image/*" required>
													    <label class="custom-file-label" for="fotoP">Seleccione una foto de perfil</label>
													</div>
												</div>
											</div>
											<button type="submit" class="btn btn-outline-primary btn-block">
												Registrarse
											</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>

{{>footer}}