{{>head}}

	{{>navigation}}
	<!-- HEADER -->
	<header id="header">
		<div class="container mt-5">
			<div class="row">
				<div class="col-md-6">
					<div class="header-content-left">
						<img src="img/student.jpg" style="width: 100%">
					</div>
				</div>
				<div class="col-md-6">
					<div class="header-content-right">
						<div class="row justify-content-center">
							<h2>Bienvenido</h2>
						</div>
						{{#if session}}
							<div class="section">
								<div class="container">
									<div class="row justify-content-center mt-5">
										<img src="img/icon.jpg" style="width: 30%">
									</div>
									<div class="row justify-content-center mt-2">
										<h3>Usuario: {{nombre}}</h3>
									</div>
								</div>
							</div>
						{{else}}
							<div class="section">
								<div class="container">
									<div class="row justify-content-center">
										<form action="/ingresar" method="POST" class="card my-2">
											<div class="card-body">
												<div class="form-group">
													<div class="input-group mb-2">
														<div class="input-group-prepend">
															<i class="fas fa-id-badge input-group-text"></i>
														</div>
														<input type="number" placeholder="Identificación" class="form-control" name="id" required>
													</div>	
												</div>
												<div class="form-group">
													<div class="input-group mb-2">
														<div class="input-group-prepend">
															<i class="fas fa-key input-group-text"></i>
														</div>
														<input type="password" placeholder="Contraseña" class="form-control" name="password" required>
													</div>	
													<p class="text-right small"><a href="/">Forgot password?</a></p>
												</div>
												<button type="submit" class="btn btn-outline-primary btn-block">
													Enviar
												</button>
												<p class="mt-3 text-center small">DON´T HAVE AN ACCOUNT? <a href="/registro">SIGN UP</a></p>
											</div>
										</form>
									</div>
								</div>
							</div>
						{{/if}}
					</div>
				</div>
			</div>
		</div>
	</header>

{{>footer}}